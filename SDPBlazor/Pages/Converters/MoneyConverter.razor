<h3>MoneyConverter</h3>

<label for="money" class="form-label">Money</label>
<input type="number" class="form-control" id="dolar" placeholder="Dolars..." @bind="_dolars" @bind:event="oninput" />
<input type="number" class="form-control" id="conversion-ratio" placeholder="Conversion Ratio... Default: 4,59" @bind="_convR" @bind:event="oninput" />

<button type="submit" class="btn btn-primary mt-4" @onclick="ConvertMoney">
	<span class="oi oi oi-calculator me-2" aria-hidden="true"></span>Convert
</button>
@if (_zlotys != null)
{
			<div class="mt-4">
				<span>@_dolars $ = @_zlotys Polish Złoty </span>
			</div>
}

@code {
	double? _zlotys = null;
	double? _dolars = null;
	double? _convR = null;
	double defaultConvR = 4.59;

	private void ConvertMoney()
	{
		if (_convR != null)
		{
			_zlotys = _dolars * _convR;
		}
		else
		{
			_zlotys = _dolars * defaultConvR;
		}
	}
}
