<h3>CodeInterpreter</h3>

@page "/interpreter"


<div class="row vh-100">
	<div class=" col-6">
		<textarea class="form-control h-75" @bind=_markdownCode @bind:event="oninput"></textarea>
	</div>
	<div class="col-6 h-75">
		@((MarkupString)@Markdig.Markdown.ToHtml(_markdownCode))
	</div>
</div>

@code {
	string _markdownCode = string.Empty;
}
